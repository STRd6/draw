body, html
  height: 100%

body
  display: flex
  margin: 0

  > canvas
    margin: auto
    width: 100vw /* Maintain aspect ratio, yet scale to fill https://stackoverflow.com/questions/20590239/ */
    height: 56.25vw /* height:width ratio = 9/16 = .5625  */
    max-height: 100vh
    max-width: 177.78vh /* 16/9 = 1.778 */
